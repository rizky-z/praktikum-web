// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Int
  createdAt  DateTime @default(now())
  categoryId Int
  category   categori @relation(fields: [categoryId], references: [id])
}

model categori {
  id       Int       @id @default(autoincrement())
  name     String
  products product[]
}
